<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/btn0"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="0"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/btn1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        android:text="0"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/btn2"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        android:text="0"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/btn3"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        android:text="0"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/btn4"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        android:text="0"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        />


    <Button
        android:id="@+id/btn04"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"



        />

    <Button
        android:id="@+id/btn03"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn04"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />
    <Button
        android:id="@+id/btn02"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn03"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />

    <Button
        android:id="@+id/btn01"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn02"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />
    <Button
        android:id="@+id/btn00"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn01"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />



    <Button
        android:id="@+id/btn14"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn04"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />

    <Button
        android:id="@+id/btn13"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn03"
        app:layout_constraintTop_toBottomOf="@id/btn14"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />
    <Button
        android:id="@+id/btn12"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn02"
        app:layout_constraintTop_toBottomOf="@id/btn13"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />

    <Button
        android:id="@+id/btn11"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn01"
        app:layout_constraintTop_toBottomOf="@id/btn12"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />
    <Button
        android:id="@+id/btn10"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn00"
        app:layout_constraintTop_toBottomOf="@id/btn11"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />


    <Button
        android:id="@+id/btn24"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn14"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />

    <Button
        android:id="@+id/btn23"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn13"
        app:layout_constraintTop_toBottomOf="@id/btn24"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />
    <Button
        android:id="@+id/btn22"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn12"
        app:layout_constraintTop_toBottomOf="@id/btn23"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />

    <Button
        android:id="@+id/btn21"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn11"
        app:layout_constraintTop_toBottomOf="@id/btn22"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />
    <Button
        android:id="@+id/btn20"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn10"
        app:layout_constraintTop_toBottomOf="@id/btn21"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />


    <Button
        android:id="@+id/btn34"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn24"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />

    <Button
        android:id="@+id/btn33"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn23"
        app:layout_constraintTop_toBottomOf="@id/btn34"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />
    <Button
        android:id="@+id/btn32"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn22"
        app:layout_constraintTop_toBottomOf="@id/btn33"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />

    <Button
        android:id="@+id/btn31"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn21"
        app:layout_constraintTop_toBottomOf="@id/btn32"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />
    <Button
        android:id="@+id/btn30"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn20"
        app:layout_constraintTop_toBottomOf="@id/btn31"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />

    <Button
        android:id="@+id/btn44"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn34"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />

    <Button
        android:id="@+id/btn43"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn33"
        app:layout_constraintTop_toBottomOf="@id/btn44"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />
    <Button
        android:id="@+id/btn42"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn32"
        app:layout_constraintTop_toBottomOf="@id/btn43"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />

    <Button
        android:id="@+id/btn41"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn31"
        app:layout_constraintTop_toBottomOf="@id/btn42"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />
    <Button
        android:id="@+id/btn40"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/btn30"
        app:layout_constraintTop_toBottomOf="@id/btn41"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa"


        />

    <Button
        android:id="@+id/btnClick0"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="#fcba03"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/btn00"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="-"
        android:textSize="30sp"

        />

    <Button
    android:id="@+id/btnClick1"
    android:layout_width="60dp"
    android:layout_height="80dp"
        android:background="#fcba03"
        android:textColor="#ffffff"
    app:layout_constraintTop_toBottomOf="@id/btn10"
    app:layout_constraintLeft_toRightOf="@id/btnClick0"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    android:text="-"
        android:textSize="30sp"
    />

    <Button
        android:id="@+id/btnClick2"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="#fcba03"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/btn20"
        app:layout_constraintLeft_toRightOf="@id/btnClick1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="-"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btnClick3"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="#fcba03"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/btn30"
        app:layout_constraintLeft_toRightOf="@id/btnClick2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="-"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btnClick4"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="#fcba03"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/btn40"
        app:layout_constraintLeft_toRightOf="@id/btnClick3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="-"
        android:textSize="30sp"
        />


    <TextView
    android:id="@+id/tvTurn"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:text="Turn-"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btnClick0"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"


    />

    <TextView
        android:id="@+id/tvTurnActual"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Player 1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tvTurn"
        app:layout_constraintTop_toBottomOf="@id/btnClick0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"


        />


    <TextView
        android:id="@+id/tvWinner"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Winner-"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tvTurnActual"
        app:layout_constraintTop_toBottomOf="@id/btnClick0"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"


        />

    <TextView
        android:id="@+id/tvWinnerActual"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="None"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tvWinner"
        app:layout_constraintTop_toBottomOf="@id/btnClick0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"


        />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_style"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/tvTurn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:textStyle="bold"

        />


    <Button
        android:id="@+id/btnReset"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_style"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/tvTurn"
        app:layout_constraintLeft_toRightOf="@id/btnSave"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Reset"
        android:textStyle="bold"
        android:onClick="resetGame0"

        />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_style"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/tvTurn"
        app:layout_constraintLeft_toRightOf="@id/btnReset"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Start"
        android:textStyle="bold"
        android:onClick="startGame0"

        tools:ignore="OnClick" />






</androidx.constraintlayout.widget.ConstraintLayout>